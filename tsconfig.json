{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",

    "outDir": "./dist",  // Output directory for compiled JavaScript
    "rootDir": "./src",  // Root directory for TypeScript source files
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

